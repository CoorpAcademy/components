{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["jsx", "ava"],
  "rules": {
    "jsx/uses-factory": [1, {"pragma": "h"}],
    "jsx/factory-in-scope": [1, {"pragma": "h"}],
    "jsx/mark-used-vars": 1,
    "ava/test-ended": 2,
    "jsx/no-undef": 1,
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "no-unused-vars": [2, {"args": "none"}]
  }
}
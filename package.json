{
  "private": true,
  "scripts": {
    "prestatic": "rimraf static",
    "static": "lerna run --scope @coorpacademy/components --scope @coorpacademy/app-player static -- --production",
    "poststatic": "mkdirp static && cp -r packages/@coorpacademy-components/static static/components && cp -r packages/@coorpacademy-app-player/static static/app-player",
    "codecov": "codecov",
    "publish:beta": "lerna publish --npm-tag beta --exact",
    "publish:canary": "lerna publish --canary --exact --cd-version=patch --skip-git",
    "publish:latest": "lerna publish --exact",
    "flow-mono:symlinks": "flow-mono create-symlinks packages/**/.flowconfig",
    "postinstall": "npm run flow-mono:symlinks"
  },
  "engines": {
    "node": "^8.12.0",
    "npm": "^6.4.1",
    "yarn": "^1.12.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "codecov": "^3.1.0",
    "estraverse-fb": "1.3.2",
    "flow-mono-cli": "^1.4.3",
    "lerna": "^3.4.3",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.2"
  }
}

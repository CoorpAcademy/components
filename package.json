{
  "scripts": {
    "start:components": "lerna exec --scope @coorpacademy/components -- npm start",
    "start:angular": "lerna exec --scope @coorpacademy/treantjs-adapter-angular -- npm start",
    "postinstall": "npm run bootstrap",
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "publish:latest": "lerna publish",
    "publish:beta": "lerna publish --npm-tag beta",
    "publish:canary": "lerna publish --canary",
    "clean": "lerna run clean && lerna clean --yes",
    "test": "lerna run test && npm run nyc",
    "lint": "lerna run lint",
    "ava": "lerna run ava",
    "nyc": "rm -rf .nyc_output && mkdir .nyc_output && cp $(ls packages/**/.nyc_output/*.json) .nyc_output && nyc --reporter=text --reporter=lcov report",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "devDependencies": {
    "coveralls": "^2.11.13",
    "lerna": "2.0.0-beta.28",
    "nyc": "^8.3.0"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}

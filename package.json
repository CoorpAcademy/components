{
  "scripts": {
    "ava": "NODE_ENV=test ava",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna run clean && lerna clean --yes",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "doc": "lerna run --scope @coorpacademy/components doc",
    "lerna": "lerna",
    "lint": "eslint .",
    "nyc": "NODE_ENV=test nyc npm run ava",
    "postinstall": "npm run bootstrap",
    "posttest": "lerna run prepublish",
    "publish:beta": "lerna publish --npm-tag beta",
    "publish:canary": "lerna publish --canary --skip-git",
    "publish:latest": "lerna publish",
    "start:angular": "lerna exec --scope @coorpacademy/treantjs-adapter-angular -- npm start",
    "start:components": "lerna exec --scope @coorpacademy/components -- npm start",
    "storybook:export": "lerna exec --scope @coorpacademy/components -- npm run storybook:export",
    "test": "npm run lint && npm run nyc"
  },
  "devDependencies": {
    "@coorpacademy/eslint-plugin-coorpacademy": "^3.0.1",
    "ava": "^0.19.0",
    "babel-preset-es2015": "^6.13.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.24.0",
    "coveralls": "^2.11.13",
    "eslint": "^3.18.0",
    "eslint-plugin-react": "^6.10.3",
    "lerna": "2.0.0-beta.38",
    "nyc": "^10.0.0"
  },
  "ava": {
    "concurrency": 8,
    "files": [
      "packages/**/src/**/test/**/*.js",
      "!**/node_modules/**/*"
    ],
    "require": "babel-register",
    "babel": "inherit"
  },
  "nyc": {
    "include": [
      "packages/**/src/**"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "packages/**/src/**/test/**",
      "packages/**/dist/**",
      "packages/**/es/**",
      "packages/**/lib/**",
      "storybook/**"
    ],
    "require": "babel-register",
    "sourceMap": false,
    "instrument": false,
    "all": true
  },
  "babel": {
    "presets": ["es2015", "stage-1", "react"]
  }
}

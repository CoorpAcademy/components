{
  "presets": ["es2015", "stage-1"],
  "env": {
    "development": {
      "sourceMaps": "inline"
    },
    "test": {
      "plugins": [
        ["css-modules-transform", {
            "generateScopedName": "[name]__[local]___[hash:base64:5]"
        }]
      ]
    },
    "production": {
      "plugins": [
        ["css-modules-transform", {
            "generateScopedName": "[name]__[local]___[hash:base64:5]"
        }]
      ]
    }
  },
  "plugins": [
    ["transform-h-jsx", { "pragma": "h" }]
  ],
  "only": [
    "src"
  ]
}

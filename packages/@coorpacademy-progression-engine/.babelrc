{
  "presets": ["@babel/preset-flow"],
  "plugins": [["@babel/plugin-proposal-object-rest-spread", { "loose": true }]],
  "env": {
    "commonjs": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": {
              "node": true
            },
            "loose": true
          }
        ]
      ]
    },
    "test": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": {
              "node": true
            },
            "loose": true
          }
        ]
      ],
      "plugins": ["istanbul"]
    },
    "es": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": {
              "node": true
            },
            "modules": false,
            "loose": true
          }
        ]
      ]
    }
  }
}

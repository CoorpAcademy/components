{
  "name": "@coorpacademy/player-web",
  "version": "3.1.34",
  "description": "CoorpAcademy web slide-player",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "es",
    "lib",
    "locales",
    "README.md"
  ],
  "scripts": {
    "ava": "cross-env NODE_ENV=test ava",
    "nyc": "cross-env NODE_ENV=test nyc npm run ava",
    "test": "npm run lint && npm run nyc",
    "lint": "npm run eslint",
    "eslint": "eslint ./ *.js *.json --ext .js,.json",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib -s --ignore test --copy-files",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es -s --ignore test --copy-files",
    "build": "npm run build:commonjs && npm run build:es",
    "clean:build:commonjs": "rimraf lib",
    "clean:build:es": "rimraf es",
    "clean:build": "npm run clean:build:commonjs && npm run clean:build:es",
    "clean:static": "rimraf static",
    "clean": "npm run clean:build && npm run clean:static",
    "prepare": "npm run clean && npm run build --production",
    "static": "webpack --progress --output-path static/dist/ --config sandbox/webpack.config.js",
    "poststatic": "cp sandbox/index.html static/index.html",
    "start": "cross-env BABEL_ENV=es webpack-dev-server --config sandbox/webpack.config.js --content-base sandbox --host 0.0.0.0 --history-api-fallback true --hot true"
  },
  "homepage": "https://github.com/CoorpAcademy/components/packages/@coorpacademy-app-player#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/polyfill": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@coorpacademy/css-modules-require-hook": "^2.0.1",
    "ava": "^1.4.1",
    "babel-plugin-istanbul": "^4.1.4",
    "browser-env": "^3.2.5",
    "cross-env": "^5.0.0",
    "eslint": "^4.18.2",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.1",
    "webpack": "^4.8.2",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "@coorpacademy/components": "9.1.24",
    "@coorpacademy/player-services": "5.0.15",
    "@coorpacademy/player-store": "4.0.11",
    "@coorpacademy/progression-engine": "11.0.5",
    "@coorpacademy/redux-task": "1.0.1",
    "@coorpacademy/translate": "6.0.1",
    "@coorpacademy/webpack-config": "8.0.1",
    "lodash": "^4.17.4",
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "ava": {
    "concurrency": 8,
    "files": [
      "src/**/test/**/*.js"
    ],
    "require": [
      "@babel/register",
      "@babel/polyfill",
      "./src/test/helpers/css-register"
    ],
    "babel": {
      "testOptions": {
        "presets": [
          "@ava/stage-4",
          "@babel/preset-env"
        ],
        "plugins": [
          "@babel/plugin-proposal-object-rest-spread"
        ]
      }
    }
  }
}

{
  "env": {
    "es6": true,
    "browser": true
  },
  "plugins": [
    "@coorpacademy/coorpacademy",
    "react-hooks"
  ],
  "extends": [
    "plugin:@coorpacademy/coorpacademy/core",
    "plugin:@coorpacademy/coorpacademy/ava",
    "plugin:@coorpacademy/coorpacademy/es20XX",
    "plugin:@coorpacademy/coorpacademy/lodash-fp",
    "plugin:@coorpacademy/coorpacademy/css-modules",
    "plugin:@coorpacademy/coorpacademy/react",
    "plugin:@coorpacademy/coorpacademy/prettier"
  ],
  "parser": "@babel/eslint-parser",
  "rules": {
    "@coorpacademy/coorpacademy/no-overwriting-spread": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "promise/no-native": "off",
    "fp/no-class": "off",
    "default-param-last": "warn",
    "react/jsx-one-expression-per-line": "off",
    "react/jsx-curly-newline": "off",
    "react/jsx-max-depth": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".jsx",
          ".tsx",
          ".js"
        ]
      }
    ],
    "no-shadow": [
      "error",
      {
        "allow": [
          "Notification"
        ]
      }
    ],
    "no-restricted-properties": [
      "error",
      {
        "object": "Object",
        "property": "keys",
        "message": "IE doesn't support Object.keys with non-Object value. Use _.keys instead."
      }
    ],
    "node/no-unsupported-features/es-syntax": [
      "error",
      {
        "ignores": [
          "modules"
        ]
      }
    ],
    "node/file-extension-in-import": [
      "error",
      "always",
      {
        ".js": "never",
        ".ts": "never",
        ".tsx": "never",
        ".json": "never"
      }
    ]
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".json",
          ".jsx",
          ".ts",
          ".d.ts",
          ".tsx"
        ]
      }
    },
    "import/core-modules": [
      "ava"
    ],
    "node": {
      "allowModules": [
        "ava"
      ],
      "tryExtensions": [
        ".js",
        ".json",
        ".ts",
        ".tsx",
        ".d.ts"
      ]
    }
  },
  "overrides": [
    {
      "files": [
        "./ava.config.cjs",
        "./nyc.config.js",
        "./webpack.config.js",
        "./postcss.config.js",
        "**/test/**",
        ".storybook/**",
        "./scripts/**",
        "./locales/**"
      ],
      "env": {
        "commonjs": true,
        "node": true
      },
      "rules": {
        "no-console": "off",
        "react/jsx-no-bind": "off",
        "css-modules/no-unused-class": "off"
      }
    },
    {
      "files": [
        "**/*.ts",
        "**/*.tsx"
      ],
      "parser": "@typescript-eslint/parser",
      "plugins": [
        "@typescript-eslint"
      ],
      "extends": [
        "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
        "no-use-before-define": "off",
        "@typescript-eslint/no-unused-vars": "error"
      }
    }
  ]
}

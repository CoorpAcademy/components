{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.js"
  ],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "types": [
      "react-native"
    ],
    // Don't emit; only do type-checking, leave trasformation to Babel.
    "noEmit": true,
    // https://stackoverflow.com/questions/39423054/react-jsx-file-giving-error-cannot-read-property-createelement-of-undefined#comment103952221_56015464
    "esModuleInterop": true,
    "strict": true
  }
}

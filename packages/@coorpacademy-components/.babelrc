{
  "presets": ["stage-1"],
  "plugins": [
    ["inferno"]
  ],
  "env": {
    "commonjs": {
      "presets": [
        ["es2015", { "loose": true }]
      ],
      "plugins": [
        ["css-modules-transform", {
          "generateScopedName": "[folder]__[local]"
        }]
      ]
    },
    "test": {
      "presets": [
        ["es2015", { "loose": true }]
      ],
      "plugins": [
        ["css-modules-transform", {
          "generateScopedName": "[folder]__[local]"
        }],
        "istanbul"
      ]
    },
    "es": {
      "presets": [
        ["es2015", { "loose": true, "modules": false }]
      ]
    }
  }
}

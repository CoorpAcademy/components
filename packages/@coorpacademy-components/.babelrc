{
  "presets": ["flow", "react", "es2015", "stage-1"],
  "env": {
    "commonjs": {
      "presets": [
        ["es2015", { "loose": true }]
      ],
      "plugins": [
        "syntax-flow",
        ["transform-class-properties", {"spec": false}],
        ["transform-react-remove-prop-types", {
          "mode": "wrap"
        }],
        ["css-modules-transform", {
          "generateScopedName": "[folder]__[local]"
        }]
      ]
    },
    "test": {
      "presets": [
        ["es2015", { "loose": true }]
      ],
      "plugins": [
        "syntax-flow",
        ["transform-class-properties", {"spec": false}],
        ["css-modules-transform", {
          "generateScopedName": "[folder]__[local]"
        }],
        "istanbul"
      ]
    },
    "es": {
      "presets": [
        ["es2015", { "loose": true, "modules": false }]
      ],
      "plugins": [
        "syntax-flow",
        ["transform-class-properties", {"spec": false}],
        ["transform-react-remove-prop-types", {
          "mode": "wrap"
        }]
      ]
    }
  }
}

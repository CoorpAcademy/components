{
  "include": [
    "src/types/globals.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "src/**/*.js"
  ],
  "compilerOptions": {
    // "strict": true,
    "baseUrl": ".",
    // "module": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "target": "ES2020",
    "allowJs": true
  }
}

{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.js",
  ],
  "compilerOptions": {
    "module": "ES2020",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "target": "ES2020"
  }
}
